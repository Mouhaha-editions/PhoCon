{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>
<div class="row">
<div class="col-12">
    <div class="">
        {% for picture in pictures %}

            <img src="{{ vich_uploader_asset(picture,"imageFile")|imagine_filter("picture_folio") }}"
                                    alt="{{ picture.title }}" class="img-fluid"/>
        {% endfor %}
    </div>
</div>
</div>

    <a href="{{ path('picture_new') }}">Create new</a>
{% endblock %}
